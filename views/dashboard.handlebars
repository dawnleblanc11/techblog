{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
      {{> dashboard-post-info post}}
      <a href="/dashboard/edit/{{post.id}}"> Edit post</a>
    {{/each}}
  </ol>
</section>
{{/if}}

<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ New Post</a></button>

<script src="/javascript/add-post.js"></script>
<script src="/javascript/edit-post.js"></script>