<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body new-post-form" id="new-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input type="text" id="post-title" name="post-title" value="{{post.title}}" class="form-input" />


        <label class="form-label" for="content">Content</label>
        <input id="content" type="text" value="{{post.post_text}}"name="content" class="form-input" />

        <button type="submit" class="btn">Edit Post</button>
        <button type="submit" class="delete-post-btn btn">Delete Post</button>
    </form>
</div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
