<article style="padding:10px;">
  <a href="/dashboard" class="reverse"> &larr; Back to dashboard</a>
  <div>
  </div>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input class="form-input" type="text" id="post-title" name="post-title" value="{{post.title}}" />
    </div>
    <div>
      <label for="post-content">Content</label>
      <input class="form-input" id="content" name="content" value="{{post.content}}" />
    </div>
    
    <button type="submit" class="btn">Update Post</button>
    <button type="submit" class="delete-post-btn">Delete Post</button>
  </form>
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
    </div>
    <div>
      <a href="/post/{{post.id}}" class="reverse">{{post.comments.length}}
        {{format_plural "comment" post.comments.length}}</a>
    </div>
  </form>
  {{> comments post.comments}}
</article>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
