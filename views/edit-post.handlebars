<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body" id="edit-post-form">
        <input type="hidden" name="post-id" value"{{post.id}}" />
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" id="post-title"  value="{{post.title}}" class="form-input" />


        <label class="form-label" for="post-text">Enter Blog Post Here</label>
        <input id="post-text" type="text" value="{{post.post_text}}" class="form-input" />

        <button type="submit" class="btn">Edit Post</button>
        <button type="button" class="delete-post-btn btn">Delete Post</button>
    </form>
</div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
